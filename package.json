{
  "name": "md2outlook",
  "displayName": "md2outlook",
  "description": "Markdown to Outlook mail",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "md2outlook.copyHtml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "md2outlook.copyHtml",
        "title": "Copy Html formated Markdown to Outlook"      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "md2outlook.copyHtml",
          "when": "editorLangId == markdown"
        }
      ]
    },
    "configuration": [
      {
        "title": "md2outlook",
        "properties":{
          "md2outlook.cssPath": {
            "order": 2,
            "type": "string",
            "markdownDescription": "CSS style sheet",
            "default": ""
          }
        }
        
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3"
  },
  "dependencies": {
    "highlight.js": "^11.9.0",
    "markdown-it": "^13.0.2",
    "markdown-it-mark": "^3.0.1"
  }
}
